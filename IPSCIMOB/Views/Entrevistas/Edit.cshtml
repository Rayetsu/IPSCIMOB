@model IPSCIMOB.Models.Entrevista

@{
    ViewData["Title"] = "Edit";
}
<hr />
<h2>Editar Dados da Entrevista </h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EntrevistaId" />
            <div class="form-group">
                <label asp-for="NumeroAluno" class="control-label"></label>
                <input asp-for="NumeroAluno" class="form-control" />
                <span asp-validation-for="NumeroAluno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDeEntrevista" class="control-label"></label>
                <input asp-for="DataDeEntrevista" class="form-control" />
                <span asp-validation-for="DataDeEntrevista" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NomePrograma" class="control-label"></label>
                <input asp-for="NomePrograma" class="form-control" />
                <span asp-validation-for="NomePrograma" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Estado" ></label>
                <div class="col-md-10">
                    <select asp-for="Estado" asp-items="Html.GetEnumSelectList<EstadoEntrevista>()">
                        <option selected="selected" value="">Selecione o Estado da Entrevista</option>
                    </select>
                </div>
            </div>

            <br />
            <div class="form-group" align="center">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar Atrás</a>
</div>

