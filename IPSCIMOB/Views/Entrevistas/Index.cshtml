@model IEnumerable<IPSCIMOB.Models.Entrevista>

@{
    ViewData["Title"] = "Index";
}

<h2 align="center">Lista de Entrevistas com Candidatos</h2>
<hr />


<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NumeroAluno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataDeEntrevista)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NomePrograma)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroAluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.DataDeEntrevista)
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomePrograma)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EntrevistaId">Editar</a>                
                @*<a asp-action="Delete" asp-route-id="@item.EntrevistaId">Eliminar</a>*@
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.EntrevistaId">Detalhes</a> 
            </td>
        </tr>
}
    </tbody>
</table>

<div align="center">
    <input type="button" value="VOLTAR PARA HOME" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" />
</div>