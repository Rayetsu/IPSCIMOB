@model IEnumerable<IPSCIMOB.Models.InstituicaoParceiraModel>

@{
    ViewData["Title"] = "Index";
}

<h2 align ="center">Lista de Instituições Parceiras - Programas de Mobilidade</h2>
<hr />
<p>
    <a asp-action="Create">Criar Nova Instituição</a>
</p>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pais)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProgramaNome)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgramaNome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InstituicaoParceiraID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.InstituicaoParceiraID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.InstituicaoParceiraID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>


<div align="center">
    <input type="button" value="VOLTAR PARA HOME" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" />
</div>