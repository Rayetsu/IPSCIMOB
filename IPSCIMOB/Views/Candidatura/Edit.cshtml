            </div>*@
            <div class="form-group">
                 <label asp-for="EstadoDocumentos"></label>
                 <div class="col-md-10">
                    <select asp-for="EstadoDocumentos" asp-items="Html.GetEnumSelectList<EstadoDocumentos>()" id="EstadoDocumentos">
                     <option selected="selected" value="">Selecione Estado </option>
                </select>
                </div>
            </div>
            
            <br />         

            <div class="form-group">
                <label asp-for="EstadoBolsa"></label>
                <div class="col-md-10">
                    <select asp-for="EstadoBolsa" asp-items="Html.GetEnumSelectList<EstadoBolsa>()">
                        <option selected="selected" value="">Selecione Estado</option>                      
                    </select>
                </div>
            </div>
         
            <br />
            
            <div class="form-group">
                <label asp-for="Estado"></label>
                <div class="col-md-10">
                    <select asp-for="Estado" asp-items="Html.GetEnumSelectList<EstadoCandidatura>()">
                        <option selected="selected" value="">Selecione Estado</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Semestre"></label>
                <div class="col-md-10">
                    <select asp-for="Semestre" asp-items="Html.GetEnumSelectList<Semestre>()">
                        <option selected="selected" value="">Selecione Estado</option>
                    </select>
                    <span asp-validation-for="Semestre" class="text-danger" />
                </div>
            </div>

            
            <br />
            <br />

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" id="Guardar"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar Atrás</a>
</div>

