@model IEnumerable<IPSCIMOB.Models.CandidaturaModel>

@{
    ViewData["Title"] = "AlunosEmMob";
}

<h2>Lista de Utilizadores que se encontram em Mobilidade</h2>

<table class="table">
    <thead>
        <tr>
               <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumeroInterno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsBolsa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EstadoBolsa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsEstudo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsEstagio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsInvestigacao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsLecionar)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsFormacao)
                </th>
                <th>
                   Leu Regulamento @*@Html.DisplayNameFor(model => model.IsConfirmado)*@
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pais)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {

    if (item.Estado == EstadoCandidatura.EmMobilidade) { 
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Programa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroInterno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsBolsa)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoBolsa)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEstudo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEstagio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsInvestigacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsLecionar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFormacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsConfirmado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.CandidaturaID">Edit</a> |*@
                <a asp-action="Details" asp-route-id="@item.CandidaturaID">Detalhes</a> 
                @*<a asp-action="Delete" asp-route-id="@item.CandidaturaID">Delete</a>*@
            </td>
        </tr>
    }
}
    </tbody>
</table>


<div align="center">
    <input type="button" value="VOLTAR PARA HOME" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" />
</div>
