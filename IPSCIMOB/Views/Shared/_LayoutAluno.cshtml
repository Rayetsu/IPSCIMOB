
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IPS-CIMOB</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <style type="text/css">
            ul.nav li.dropdown:hover > ul.dropdown-menu {
                display: block;
            }
        </style>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="SelecionarMobilidade" class="navbar-brand">CIMOB</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Programas de Mobilidade <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Programa Vasco da Gama", "Details", "InformacoesGerais", new { id = 1 }, null)</li>
                            <li>@Html.ActionLink("Programa Politécnico de Macau", "Details", "InformacoesGerais", new { id = 2 }, null)</li>
                            <li>@Html.ActionLink("Programa Erasmus+", "Details", "InformacoesGerais", new { id = 3 }, null)</li>
                            <li>@Html.ActionLink("Programa Santander Universidades", "Details", "InformacoesGerais", new { id = 4 }, null)</li>
                            <li>@Html.ActionLink("Santander Missões de Ensino e Formação", "Details", "InformacoesGerais", new { id = 5 }, null)</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Sobre o CIMOB", "Details", "InformacoesGerais", new { id = 6 }, null)</li>
                    <li>@Html.ActionLink("Bolsa de Estudos", "Details", "InformacoesGerais", new { id = 7 }, null)</li>
                    <li>@Html.ActionLink("Sugestões", "Create", "Sugestao")</li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - IPS-CIMOB</p>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>

